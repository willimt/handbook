.touch-main {
 font-size: 14px;
 display: flex;
 justify-content: space-between;
 border-bottom:0px;
 width: 100%;
 overflow: hidden
}
.touch-content {
 width: 100%;
 padding: 0px;
 line-height: 22px;
 margin-right:0;
 -webkit-transition: all 0.4s;
 transition: all 0.4s;
 -webkit-transform: translateX(90px);
 transform: translateX(90px);
 margin-left: -90px
}
.touch-hide {
 background-color: orangered;
 width: 90px;
 display: flex;
 flex-direction: column;
 align-items: center;
 justify-content: center;
 color: #fff;
 -webkit-transform: translateX(90px);
 transform: translateX(90px);
 -webkit-transition: all 0.4s;
 transition: all 0.4s;
 margin: 0 0 15px 0;
 border-radius: 5px;
}

.touch-active .touch-content,
.touch-active .touch-hide {
 -webkit-transform: translateX(0);
 transform: translateX(0);
}

