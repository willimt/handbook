<!--pages/add/add.wxml-->
<view class='add-page'>
  <view class='mod-a'>
    <!-- 标题名称 -->
    <view class='mod t-name hengxian'>
      <text class='key'>标题</text>
      <input class='input' bindinput="bindKeyInput" maxlength='100' placeholder='请输入内容' ></input> 
    </view>
    <view class='mod t-name'>
      <text class='key'>备注</text>
      <input class='input' bindinput="bindremarkInput" maxlength='100' placeholder='' value='{{inputValue}}'></input> 
    </view>
  </view>

  <view class="section">
        <view class="section__title hengxian">收支</view>
        <radio-group class="radio-group hengxian" bindchange="radioChange">
            <label class="radio">
                <radio class="radio" value="+" checked="true"/>收入
            </label>
            <label class="radio">
                <radio class="radio" value="-"/>支出
            </label>
        </radio-group>
    </view>
    <view class='mod-a'>
    <view class='mod t-name hengxian'>
      <text class='key'>消费类型</text>
      <picker name="typeindex" value="{{typeindex}}" range="{{typearray}}" bindchange="bindTypeArrayChange">
                <view class="weui-input" name="member">{{typearray[typeindex]}}</view>
        </picker> 
    </view>
    </view>
  <view class="section">
        <view class="section__title">金额</view>
        <input bindinput="bindAccountInput" type="number" value="{{account}}" placeholder="请输入数字，无需加正负号"/>
  </view>
  <view class='mod-a mt20'>
    <!-- 日期 -->
    <view class='mod '>
      <text >日期</text>
      <view class='start'>
        <picker mode='date' bindchange='stratChange' value="{{bill.startDay}}" start='{{bill.startDay}}'>
          <view class='date'>{{bill.startDay}}<image class='arrow-d' src='/image/arrow-d-0.png'></image>
          </view>
        </picker>
      </view>
      
    </view>
  </view>
  <!--创建按钮-->
  <view class='create'>
    <button class="btn {{creating?'disabled':''}}" bindtap='bindSubmit'>添加</button>
  </view>
  <!-- 提示信息 -->
  <modal class="modal" hidden="{{alertHidden}}" no-cancel bindconfirm="hideAlertView">
  <view>{{alertTitle}}</view>
  </modal>
  <modal class="modal" hidden="{{modalHidden}}" no-cancel bindconfirm="hideModal">
  <view>添加成功</view>
  </modal>
</view>
